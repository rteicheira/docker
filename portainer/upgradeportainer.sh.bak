#!/bin/bash

##########
# Filename: upgradeportainer.sh
# Location: $HOME/docker/portainer
# Date updated: September 16, 2025
#
# Upgrades the Portainer agent. If you are running from an account not part of the Docker usegroup, you will need to add sudo before the commands.
##########

{ echo -e "Pulling the latest Portainer container...";}
output=$(docker pull portainer/portainer-ce:lts)
echo "$output"

if echo "$output" | grep -q "Image is up to date for portainer/portainer-ce:lts"; then
        { echo -e "\n\033[92mPortainer already up to date. Exiting...\033[0m";}

else
        { echo -e "\n\033[33mUpdate available...\033[0m";}

	# Stops the current container
	{ echo -e "\nKilling the Portainer container...";}
	docker kill portainer

	# Delete the current container
	{ echo -e "\nRemove the Portainer container...";}
	docker rm portainer

	# Run Portainer
	{ echo -e "\nStarting Portainer...";}
	docker run -d -p 8000:8000 -p 9443:9443 --name portainer --restart=always -v /var/run/docker.sock:/var/run/docker.sock -v portainer_data:/data portainer/portainer-ce:lts

	{ echo -e "\nPortainer updated and running"; }
fi