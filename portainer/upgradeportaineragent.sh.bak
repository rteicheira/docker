#!/bin/bash

##########
# Filename: upgradeportaineragent.sh
# Location: $HOME/docker/portainer
# Date updated: September 16, 2025
#
# Upgrades the Portainer agent. If you are running from an account not part of the Docker usegroup, you will need to add>
##########

# Pull the latest Portainer Agent container.
{ echo -e "Pulling the latest Portainer Agent container...";}
output=$(docker pull portainer/agent:lts)
echo "$output"

if echo "$output" | grep -q "Image is up to date for portainer/agent:lts"; then
        { echo -e "\n\033[92mPortainer Agent already up to date. Exiting...\033[0m";}
else
        { echo -e "\n\033[33mUpdate available...\033[0m";}

        # Stop the current container
        { echo -e "\nKilling the Portainer Agent container...";}
        docker kill portainer_agent

        # Delete the current container
        { echo -e "\nRemove the Portainer Agent container...";}
        docker rm portainer_agent

        # Download upgrade and run Portainer
        { echo -e "\nStarting Portainer Agent...";}
	docker run -d -p 9001:9001 --name portainer_agent --restart=always -v /var/run/docker.sock:/var/run/docker.sock -v /var/lib/docker/volumes:/var/lib/docker/volumes -v /:/host portainer/agent:lts

        { echo -e "\nPortainer Agent updated and running"; }
fi